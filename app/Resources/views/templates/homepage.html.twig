{% extends "master.html.twig" %}

{% block meta %}
    {% autoescape false %}
        {{ sulu_seo(extension.seo, content, urls, shadowBaseLocale) }}
    {% endautoescape %}
{% endblock %}

{% block content %}
    <img src="{{ content.header[0].thumbnails['1140x450'] }}" class="header-image"/>

    <h1 property="title" class="page-header">{{ content.title }}</h1>

    <img src="{{ content.header[0].url }}" class="header-image"/>

    <div property="article">
        {{ content.article|raw }}
    </div>
{% endblock %}
