<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% block meta %}{% endblock %}

        {% block style %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <header>
                <nav class="navbar navbar-inverse">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ sulu_content_root_path() }}">letsrock</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <!-- TODO: Insert main navigation -->

                        <!-- TODO: Insert locale switcher -->

                        <form action="{{ path('sulu_search.website_search') }}" method="GET" class="navbar-form navbar-right">
                            <div class="form-group">
                                <input type="text" class="form-control" name="q" placeholder="Search">
                            </div>
                            <button type="submit" class="btn btn-default">Go</button>
                        </form>
                    </div>
                </nav>
            </header>

            <div class="row">
                <section class="col-sm-12" id="content" vocab="http://schema.org/" typeof="Content">
                    {{ block('content') }}
                </section>
            </div>

            <footer>
                {% block footer %}
                    <div class="pull-left">
                        <p>&copy;  {{ 'now'|date('Y') }} Awesome Web Summer Camp Developer</p>
                    </div>

                    <!-- TODO: Insert footer navigation -->
                {% endblock %}
            </footer>
        </div>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-3.1.0.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>
